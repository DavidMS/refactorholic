{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "emulate": "firebase emulators:start --only functions,firestore",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "functional-tests": "node ./node_modules/firebase-tools/lib/bin/firebase.js emulators:exec --only functions,firestore \"cucumber-js\"",
    "functional-test-feature": "node ./node_modules/firebase-tools/lib/bin/firebase.js emulators:exec --ui --only functions,firestore \"cucumber-js features/get_posts.feature\"",
    "functional-test-scenario": "node ./node_modules/firebase-tools/lib/bin/firebase.js emulators:exec --only functions,firestore \"cucumber-js features/get_posts.feature:4\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.7.0  ",
    "@nestjs/platform-express": "^7.0.0",
    "apollo-server-express": "^2.18.2",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.4",
    "graphql-upload": "^11.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@firebase/testing": "^0.20.11",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/node": "^13.9.1",
    "@types/sinon": "^9.0.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cucumber": "^6.0.5",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "firebase-functions-test": "^0.2.2",
    "firebase-tools": "^8.13.1",
    "jest": "26.4.2",
    "jest-sinon": "^1.0.4",
    "prettier": "^1.19.1",
    "sinon": "^9.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "ts-sinon": "^2.0.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-sinon"
    ]
  }
}
