{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha -r ts-node/register '**/*.spec.ts'",
    "functional-tests": "firebase emulators:exec --only functions \"cucumber-js\"",
    "functional-test-feature": "firebase emulators:exec --only functions \"cucumber-js features/get_single_post.feature\"",
    "functional-test-scenario": "firebase emulators:exec --only functions \"cucumber-js features/get_single_post.feature:16\""
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "apollo-datasource": "^0.7.2",
    "apollo-server-express": "^2.17.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "graphql": "^15.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cucumber": "^6.0.5",
    "firebase-functions-test": "^0.2.2",
    "mocha": "^8.1.3",
    "ts-node": "^9.0.0",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
